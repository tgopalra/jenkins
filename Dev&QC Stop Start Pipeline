                        def response = httpRequest "http://${URL[i]}:8080/"
                        println("Status:${URL[i]}"+response.status)
                    }
                }
                               
            }
        }

    stage("Application Status Node 2") {
            when {
                expression { "${params.TASK}" == 'status' && "${params.SERVER}" == 'baente43lvd.apac.fadv.net'}
            }
