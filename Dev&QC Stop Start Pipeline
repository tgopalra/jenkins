                script {
                    def URL = ['daa1','drch1','dabused1','dadgws1','daprws1','dasesb1','dasmb1','dassu1','datmt1','dcs1','dcsbg','dcsimg1','dcsxml1','dhdvc1','dhdxml1','djesp1','dntmk1','dprfg1','dsfg1','dsslms1']
