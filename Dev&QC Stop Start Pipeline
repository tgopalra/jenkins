                script {
                    def URL = ['daa2','dbwpsj2','drch2','dabused2','dadgws2','daprws2','dasesb2','dasmb2','dassu2','dcs2','dcsimg2','dcsxml2','dhdbg','dhdvc2','dhdxml2','djesp2','dntmk2','dprfg2','dprtrk','dsfg2','dsoff','dvss']
